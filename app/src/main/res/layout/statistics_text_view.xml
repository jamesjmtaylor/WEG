<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">
    <!-- Table Row 0 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRow0">
        <TextView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/priWeapon" android:textColor="#000" android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="5dp"/>
        <!--Lessons learned: You have to specify a concrete (in 'dp's) layout_height if you want
         a background image to fit inside it.  The image lines must also be big enough in relation
          to the rest of the picture to not disappear when it's scaled to the height of the View-->
        <TextView
            android:id="@+id/statistic"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="@string/priWeapon" android:textColor="#000" android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/line"/>
    </TableRow>
</TableLayout>
